<!DOCTYPE html>
<html>
<head>
  <% include ../../../../core/server/views/pages/head %>
  <% include ../../../../core/server/views/pages/head-form %>
</head>
<body class="hold-transition skin-blue sidebar-mini sidebar-collapse">

  <div class="wrapper">

    <% include ../../../../avaliacao/server/views/pages/header %>
    <% include ../../../../avaliacao/server/views/pages/aside %>


   <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Dashboard:
          <small><%= title %></small>
        </h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-dashboard"></i> Avaliação</a></li>
          <li class="active">Cadastro</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <% if(aMessage){ 
            for(var i in aMessage) { %>
              <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="icon fa fa-check"></i> Alert!</h4>
                <%= aMessage[i] %>
              </div>
        <%  } 
          } 
        %>
<div class="row">
  <!-- left column -->
  <div class="col-md-12">

      <!-- general form elements -->
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title"><%= title %></h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <form  action="/avaliacao/edit/<%= avaliacao._id %>" method="post" role="form">
            <div class="box-body">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="componente_digital_id" >Nome Livro</label>
                  <select name="avaliacao[componente_digital_id]" required="required" class="form-control select2" id="componente_digital_id" style="width: 100%;">
                    <option 
                        value="<%= avaliacao.componente_digital_id._id %>"
                        selected="selected"  >
                          <%= avaliacao.componente_digital_id.nome_oficial %>
                    </option>
                  </select>
                </div>

                <!-- /.form-group -->
                <div class="form-group">
                  <label for="conservacao" >Conservação</label>
                  <select 
                      name="avaliacao[conservacao]" 
                      class="form-control select2" 
                      id="conservacao" style="width: 100%;"
                      required="required" >
                    <option value="-1" >Selecione ...</option>
                    <option value="1" >1 - Ruim</option>
                    <option value="2" >2 - Regular</option>
                    <option value="3" >3 - Bom</option>
                    <option value="4" >4 - Ótimo</option>
                  </select>
                </div>
                <!-- /.form-group -->

                <div class="form-group">
                  <label for="nota_conteudo">Nota Conteúdo</label>
                    <input id="nota_conteudo" type="text" name="avaliacao[nota_conteudo] slider" required="required" class="nota_conteudo-container" value="<%= avaliacao.nota_conteudo %>">
                </div>
              </div>
              <div class="col-md-6">
                  <div class="box box-info">
                    <div class="box-header">
                      <h3 class="box-title">Observação: 
                        <small>descrição sucinta.</small><br />
                        <small>texto com no máximo 256 caracteres</small>
                      </h3>
                      <!-- tools box -->
                      <div class="pull-right box-tools">
                        <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                          <i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
                          <i class="fa fa-times"></i></button>
                      </div>
                      <!-- /. tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad">
                      <textarea id="observacao" name="avaliacao[observacao]" rows="5" max="256" cols="80">
                          <%= avaliacao.observacao %>
                      </textarea>
                    </div>
                  </div>
                  <!-- /.box -->
                </div>
                <!-- /.col-->
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
              <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>

          </form>
        </div>
      <!-- /.box -->
  </div><!-- col-md-6 -->
</div><!-- row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->




    <% include ../../../../core/server/views/pages/main-footer %>
    <% include ../../../../core/server/views/pages/control-sidebar %>

  </div>
  <!-- ./wrapper -->
  <% include ../../../../avaliacao/server/views/pages/script %>
  <% include ../../../../core/server/views/pages/script-form %>

  <script>
  $(function () { 
    $('#conservacao').val("<%= avaliacao.conservacao %>").trigger('change'); 
    // $('#componente_digital_id')
    //   .val("<%= avaliacao.componente_digital_id._id %>")
    //   .text("<%= avaliacao.componente_digital_id.nome_oficial %>")
    //   .trigger('change'); 

    console.log("<%= avaliacao.componente_digital_id._id %>");
  }); 
</script>

</body>
</html>
